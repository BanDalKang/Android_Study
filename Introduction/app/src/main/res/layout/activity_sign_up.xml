<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/logo_IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Action.L_dark"
        android:id="@+id/name_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="이름"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_IV" />

    <EditText
        style="@style/Action.M_dark"
        android:id="@+id/name_ET"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="15dp"
        android:background="@drawable/edit_text_sign_in"
        android:hint="이름을 입력하세요"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/name_TV"
        app:layout_constraintStart_toStartOf="@+id/name_TV"
        app:layout_constraintTop_toBottomOf="@+id/name_TV" />

    <TextView
        style="@style/Action.L_dark"
        android:id="@+id/id_TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="아이디"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="@+id/name_TV"
        app:layout_constraintStart_toStartOf="@+id/name_TV"
        app:layout_constraintTop_toBottomOf="@+id/name_ET" />

    <EditText
        style="@style/Action.M_dark"
        android:id="@+id/id_ET"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="15dp"
        android:background="@drawable/edit_text_sign_in"
        android:hint="아이디를 입력하세요"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/name_TV"
        app:layout_constraintStart_toStartOf="@+id/name_TV"
        app:layout_constraintTop_toBottomOf="@+id/id_TV" />

    <TextView
        style="@style/Action.L_dark"
        android:id="@+id/pwd_TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="비밀번호"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="@+id/name_TV"
        app:layout_constraintStart_toStartOf="@+id/name_TV"
        app:layout_constraintTop_toBottomOf="@+id/id_ET" />

    <EditText
        android:id="@+id/pwd_ET"
        style="@style/Action.M_dark"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_sign_in"
        android:hint="영문 대소문자, 특수문자, 숫자 조합 (8~15자)"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/name_TV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name_TV"
        app:layout_constraintTop_toBottomOf="@+id/pwd_TV" />

    <TextView
        style="@style/Action.S_warning"
        android:id="@+id/pwd_warning_TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="※ 영문 대소문자, 특수문자, 숫자 조합하여 입력해주세요."
        android:paddingLeft="5dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/name_TV"
        app:layout_constraintStart_toStartOf="@+id/name_TV"
        app:layout_constraintTop_toBottomOf="@+id/pwd_ET" />

    <TextView
        style="@style/Action.L_dark"
        android:id="@+id/pwd_check_TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="비밀번호 확인"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="@+id/name_TV"
        app:layout_constraintStart_toStartOf="@+id/name_TV"
        app:layout_constraintTop_toBottomOf="@+id/pwd_warning_TV" />

    <EditText
        style="@style/Action.M_dark"
        android:id="@+id/pwd_check_ET"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="15dp"
        android:background="@drawable/edit_text_sign_in"
        android:hint="위와 동일한 비밀번호를 입력하세요"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/name_TV"
        app:layout_constraintStart_toStartOf="@+id/name_TV"
        app:layout_constraintTop_toBottomOf="@+id/pwd_check_TV" />

    <TextView
        style="@style/Action.S_warning"
        android:id="@+id/pwd_check_warning_TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="※ 비밀번호가 일치하지 않습니다."
        android:paddingLeft="5dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/name_TV"
        app:layout_constraintStart_toStartOf="@+id/name_TV"
        app:layout_constraintTop_toBottomOf="@+id/pwd_check_ET" />

    <Button
        android:id="@+id/signup_btn"
        style="@style/Action.M_light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:text="회원가입 완료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>